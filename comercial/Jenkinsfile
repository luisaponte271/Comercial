#!groovy? 
def JENKINS_WORKSPACE = 'C:\\Users\\usuario\\.jenkins\\workspace';
def NAME_PROJECT_JENKINS = 'comercial-app';
def NAME_JOB_JENKINS = 'comercial-backend';
def NAME_APP = 'comercial';
//String NAME = 'comercial-app\\comercial-backend\\comercial';

node {
  
	   stage('Descargar Fuentes') { 
		  checkout scm
	   }     
	  
	   stage('Compilando con Maven')
	   {
	    
		bat "cd ${JENKINS_WORKSPACE}\\${NAME_PROJECT_JENKINS}\\${NAME_JOB_JENKINS}\\${NAME_APP}" 
		//bat "%JENKINS_WORKSPACE%\\${NAME}" 
		bat "mvn clean package -DskipTests"
		
		println("compilando")
	   }

	   stage('Deployment en JBOSS') {
	   
	   println("desplegando")
						
	 	
	}
}
